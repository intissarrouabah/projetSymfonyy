{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Participant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Last_name</th>
                <th>First_name</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Password</th>
                <th>Admin</th>
                <th>Active</th>
                <th>Campus</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.username }}</td>
                <td>{{ participant.lastName }}</td>
                <td>{{ participant.firstName }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.password }}</td>
                <td>{{ participant.admin ? 'Yes' : 'No' }}</td>
                <td>{{ participant.active ? 'Yes' : 'No' }}</td>
                <td>{{ participant.campus.getNameCampus }}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': participant.id}) }}">show</a>
                    <a href="{{ path('participant_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participant_new') }}">Create new</a>
{% endblock %}
