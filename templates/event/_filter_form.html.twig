<form action="" method="get" class="filters row">
    <div class="col-md-5">
        <select class="custom-select select-campus" name="filter[campus]">
            <option selected>Sélectionnez un campus</option>
            {% for cam in campus %}
                <option value={{ cam.id }}>{{ cam.nameCampus }}</option>
            {% endfor %}
        </select>

        <input class="form-control form-control-md mr-3 w-75" type="text" placeholder="Le nom de la sortie" aria-label="Search">

        <div class="datepicker">
            <p>
                        <span>
                            <label for="date-debut">Entre</label>
                            <input type="date" class="form-control" id="date-debut" placeholder="date" aria-label="date" aria-describedby="basic-addon1">
                        </span>
                <span>
                            <label for="date-fin">et</label>
                            <input type="date" class="form-control" id="date-fin" placeholder="date" aria-label="date" aria-describedby="basic-addon1">
                        </span>
            </p>
        </div>

    </div>

    <div class="col-md-5 sorties-checkboxes">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="organisateurSortie">
            <label class="form-check-label" for="exampleCheck1">Sorties dont je suis l'organisateur/trice</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="inscritSortie">
            <label class="form-check-label" for="exampleCheck1">Sorties auxquelles je suis inscrit/e</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="pasInscritSortie">
            <label class="form-check-label" for="exampleCheck1">Sorties auxquelles je ne suis pas inscrit/e</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="sortiesPassees">
            <label class="form-check-label" for="exampleCheck1">Sorties passées</label>
        </div>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary rechercher-sortie">Rechercher</button>
    </div>

</form>