{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <div class="container">
        <div class="right-block">
            <div>
                <p>Date de jour : {{ "now"|date("d/m/Y") }}</p>
               {# TODO pour l'instant j'ai mis cette condition pour pouvoir continuer de travailler, mais il faudra le gérer autrement#}
                {% if is_granted('ROLE_USER') %}
                <p>Participant : {{ app.user.lastname|upper }} {{ app.user.firstname }}   </p>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <p>Participant : {{ app.user.lastname|upper }} {{ app.user.firstname }}   </p>
                {% endif %}
            </div>
        </div>
    <h2>Filtrer les sorties</h2>

        {% include ('event/_filter_form.html.twig') %}

        {% include('event/event_table.html.twig') %}

        <button type="button" class="btn btn-primary creer-sortie"><a href="{{ path('event_new') }}">Créer une sortie</a></button>
    </div>
{% endblock %}



